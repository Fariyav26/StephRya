<p id="notice"><%= notice %></p>

<p>
  <strong>Common name:</strong>
  <%= @animal.common_name %>
</p>

<p>
  <strong>Latin name:</strong>
  <%= @animal.latin_name %>
</p>

<p>
  <strong>Kingdom:</strong>
  <%= @animal.kingdom %>
</p>


<strong>Sightings:</strong></br></br>
<table>
  <tr>
    <th>Date</th>
    <th>Time</th>
    <th>Latitude</th>
    <th>Longitude</th>
  </tr>
<% @sightings.each do |sighting| %>
  <tr>
    <td> <%= sighting.date.strftime("%m/%d/%Y") %></td>
    <td> <%= sighting.time.strftime("%T") %></td>
    <td> <%= sighting.latitude %></td>
    <td> <%= sighting.longitude %></td>
  </tr>
<% end %>
</table>
</br>

