<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>
<strong><lable>Common Name:</lable></strong><br>
<input id="animal_common_name" type="text" name="animal[common_name]" placeholder="Common name" /><br><br>
<strong><lable>Latin Name:</lable></strong><br>
<input id="animal_latin_name" type="text" name="animal[latin_name]" placeholder="Latin name" /><br><br>
<strong><lable>Kingdom:</lable></strong><br>
<input id="animal_kingdom" type="text" name="animal[kingdom]" placeholder="Kingdom" /><br><br>
<button id="create_animal" class="btn btn-info btn-sm">Create Animal</button><br><br>


<table id="animal_list" class="table">
  <thead>
    <tr>
      <th>Common name</th>
      <th>Latin name</th>
      <th>Kingdom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.common_name %></td>
        <td><%= animal.latin_name %></td>
        <td><%= animal.kingdom %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

